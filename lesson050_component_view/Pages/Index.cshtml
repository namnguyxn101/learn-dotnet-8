@page
@using XTLAB
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@{
    var product1 = new Product() { Name = "iPhone X", Description = "Dien thoai iPhone cua Apple ...", Price = 1000 };
    var product2 = new Product() { Name = "Samsung Abc", Description = "Dien thoai cua Samsung ...", Price = 500 };
    var product3 = new Product() { Name = "Nokia Xyz", Description = "Dien thoai cua Nokia ...", Price = 900 };
}

<div class="row bg-info">
    <div class="col">
        @* Cách 1 *@
        <partial name="_ProductItem" model="product1" />
    </div>
    <div class="col">
        @* Cách 2 *@
        @await Html.PartialAsync("_ProductItem", product2)
    </div>
    <div class="col">
        @* Cách 3 *@
        @{
            await Html.RenderPartialAsync("_ProductItem", product3);
        }
    </div>
</div>

<div class="row bg-warning">
    @{
        var products = new List<Product>()
        {
        new Product() { Name = "SP1", Description = "Mo ta cho SP 1", Price = 900},
        new Product() { Name = "SP2", Description = "Mo ta cho SP 2", Price = 100},
        new Product() { Name = "SP3", Description = "Mo ta cho SP 3", Price = 400},
        new Product() { Name = "SP4", Description = "Mo ta cho SP 4", Price = 200},
        };

        foreach (var product in products)
        {
            <div class="col">
                <partial name="_ProductItem" model="product" />
            </div>
        }
    }
</div>